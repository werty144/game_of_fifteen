#:kivy 1.0.9

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.7, 0.3)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Button:
            on_press: root.manager.transition.direction = 'left'; root.manager.current = 'game'
            text: 'Play'
        Button:
            on_press: app.stop()
            text: 'Quit'

<Playground>:
    size_hint_y: 0.95
    width: self.height
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}



<GameScreen>:
    Button:
        on_press: root.manager.transition.direction = 'right'; root.manager.current = 'menu'
        text: 'Menu'
        size_hint: (0.1, 0.1)